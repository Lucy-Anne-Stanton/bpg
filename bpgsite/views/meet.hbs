<!-- Beginning of header -->
<header>
    <!-- Beginning of navbar -->
    <nav class="navbar navbar-inverse navbar-fixed-top big">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false"
                    aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!-- logos -->
                <a class="navbar-brand" href="/">
                    <img src="/images/logosml.svg" id="logo" class="big" alt="Bristol Photography Group" />
                    <img src="/images/logotext.svg" id="text" class="hidden-sm hidden-xs" />
                </a>
                <!-- End of logos -->
            </div>
            <!-- nav-collapse -->
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li class="home">
                        <a href="/">Home</a>
                    </li>
                    <li class="active meet">
                        <a href="/meet">Meet the Organisers</a>
                    </li>
                    <li class="events">
                        <a href="/events">Events</a>
                    </li>
                    <li class="past-events"><a href="/past-events">Past Events</a></li>
                    <!-- Unless a user has signed in, show the sign in/register buttons -->
                    {{#unless user.displayName}}
                    <li class="signin">
                        <a href="/signin">Sign In</a>
                    </li>
                    {{/unless}}
                    <!-- End of unless -->
                    <!-- If a user is signed in, display their name and allow them to log out -->
                    {{#if user.displayName}}
                    <li class="user">
                        <span>Hi, {{user.displayName}}!</span>
                    </li>
                    <li class="logout">
                        <a href="/users/logout">Sign Out</a>
                    </li>
                    {{/if}}
                    <!-- End of if -->
                </ul>
            </div>
            <!-- End of nav-collapse -->
        </div>
    </nav>
    <!-- End of nav -->
</header>
<!-- End of header -->
<!-- Beginning of banner -->
<div class="banner">
    <div class="banner-title">
        <h1 class="title">Meet the Organisers</h1>
    </div>
</div>
<!-- End of banner -->
<!-- Beginning of container -->
<div class="container">

    <div class="template">
        <h2>These are the three main organisers of the group.</h2>
    </div>


    <!-- Beginning of boxes -->
    <div class="boxes">

        <!-- If a user is signed in, display all the organisers and use their array key -->
        {{#if user.displayName}} {{#each organisers as |val key|}}

        <div class='col-xs-12 col-sm-6 col-md-4 center'>
            <div id='{{lowercase firstName}}' class='organiser'>
                <h3 class='title'>
                    <!-- Allow the user to view the full details, as they are signed in -->
                    <a href='/user/{{key}}' title='{{firstName}}'>{{firstName}}</a>
                </h3>
                <div class="image">
                    <img src="{{userPhoto}}" />
                </div>
                <div class="text">{{userInfo}}</div>
            </div>
        </div>
        {{/each}}
        <!-- End each -->
        <!-- Display other organisers as dummy info -->
        <div class="col-xs-12 col-sm-6 col-md-4 center">
            <div class="organiser" id="tom">
                <h3 class="title">
                    Tom
                </h3>
                <div class="image">
                    <img src="./images/member_248924317.jpeg" />
                </div>
                <div class="text">Hi, I'm Tom and I'm the founder of the group and main organiser.</div>
            </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-4 center">
            <div class="organiser" id="ems">
                <h3 class="title">
                    Ems
                </h3>
                <div class="image">
                    <img src="./images/ems.jpg" />
                </div>
                <div class="text">Hello, I'm Ems and I'm one of the assistant organisers.</div>
            </div>
        </div>
        <!-- End of dummy organisers -->
        {{/if}}
        <!-- End if -->

        <!-- Unless a user is signed in, display all the organisers and use their array key -->
        {{#unless user.displayName}} {{#each organisers as |val key|}}

        <div class='col-xs-12 col-sm-6 col-md-4 center'>
            <div id='{{lowercase firstName}}' class='organiser'>
                <h3 class='title'>
                    <!-- Display the organiser's name as a title - not a link -->
                    {{firstName}}
                </h3>
                <div class="image">
                    <img src="{{userPhoto}}" />
                </div>
                <div class="text">{{userInfo}}</div>
            </div>
        </div>
        {{/each}}
        <!-- End each -->
        <!-- Display other organisers as dummy info -->
        <div class="col-xs-12 col-sm-6 col-md-4 center">
            <div class="organiser" id="tom">
                <h3 class="title">
                    Tom
                </h3>
                <div class="image">
                    <img src="./images/member_248924317.jpeg" />
                </div>
                <div class="text">Hi, I'm Tom and I'm the founder of the group and main organiser.</div>
            </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-4 center">
            <div class="organiser" id="ems">
                <h3 class="title">
                    Ems
                </h3>
                <div class="image">
                    <img src="./images/ems.jpg" />
                </div>
                <div class="text">Hello, I'm Ems and I'm one of the assistant organisers.</div>
            </div>
        </div>
        <!-- End of dummy organisers -->
        {{/unless}}
        <!-- End unless -->
    </div>
    <!-- End of boxes -->
</div>
<!-- End of container -->
