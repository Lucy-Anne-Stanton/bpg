<!-- Beginning of header -->
<header>
    <!-- Beginning of navbar -->
    <nav class="navbar navbar-inverse navbar-fixed-top big">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false"
                    aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!-- logos -->
                <a class="navbar-brand" href="/">
                    <img src="/images/logosml.svg" id="logo" class="big" alt="Bristol Photography Group" />
                    <img src="/images/logotext.svg" id="text" class="hidden-sm hidden-xs" />
                </a>
                <!-- End of logos -->
            </div>
            <!-- nav-collapse -->
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li class="active home"><a href="/">Home</a></li>
                    <li class="meet"><a href="/meet">Meet the Organisers</a></li>
                    <li class="events"><a href="/events">Events</a></li>
                    <li class="past-events"><a href="/past-events">Past Events</a></li>
                    <!-- Unless a user has signed in, show the sign in/register buttons -->
                    {{#unless user.displayName}}
                    <li class="signin">
                        <a href="/signin">Sign In</a>
                    </li>
                    {{/unless}}
                    <!-- End of unless -->
                    <!-- If a user is signed in, display their name and allow them to log out -->
                    {{#if user.displayName}}
                    <li class="user">
                        <span>Hi, {{user.displayName}}!</span>
                    </li>
                    <li class="logout">
                        <a href="/users/logout">Sign Out</a>
                    </li>
                    {{/if}}
                    <!-- End of if -->
                </ul>
            </div>
            <!-- End of nav-collapse -->
        </div>
    </nav>
    <!-- End of nav -->
</header>
<!-- End of header -->

<!-- Flickr slider -->
<div id="dc_jflickr_slider_container">
    <ul id="dc_flickr_slider"></ul>
    <div class="flickr_slider_nav">
        <button id="flickr_slider_prev" href="#"></button>
        <button id="flickr_slider_next" href="#"></button></div>
</div>
<!-- End of Flickr slider -->

<!-- Beginning of container -->
<div class="container">

    <div class="template">
        <h1>Bristol Photography Group</h1>
        <p class="lead">
            I have started this group as I found that there were no Meetup Groups in Bristol about Photography, it's also been started
            as didn't know where to go to learn about photography.<br /> Purpose of the group is for like-minded
            people to get together, learn new skills, get inspiration from others, etc.<br /> This group is for people who
            are interested in taking up photography, novice photographers who want to learn more, avid photographers and
            anyone in between.
        </p>
        <p>
            Tom Page (founder)
        </p>
        <p class="lead">
            These are the next three events coming up, go to the events page to see more.<br />
        </p>
    </div>

</div>
<!-- End of container -->
<!-- Beginning of container -->
<div class="container">

    <!-- If a user is signed in, display the first 3 Meetup events -->
    {{#if user.displayName}} {{#withFirst events 3}}

    <div class='col-xs-12 col-sm-6 col-md-4 center'>
        <div id='groups' class='box'>
            <h3 class='title'>
                <!-- Allow the user to view the information, as they are signed in -->
                <a href='/event/{{id}}' title='{{title}}'>{{title}}</a>
            </h3>

            <div class='desc'>
                {{{description}}}

            </div>

        </div>
    </div>
    {{/withFirst}} {{/if}}
    <!-- End withFirst and if -->
    <!-- Unless a user is signed in, display the first 3 Meetup events -->
    {{#unless user.displayName}} {{#withFirst events 3}}
    <div class='col-xs-12 col-sm-6 col-md-4 center'>
        <div id='groups' class='box'>
            <h3 class='title'>
                <!-- encourage the user to sign in -->
                <a href='/signin' title='Sign in to find out about {{title}}'>{{title}}</a>
            </h3>

            <div class='desc'>
                {{{description}}}
            </div>
        </div>

    </div>


    {{/withFirst}} {{/unless}}
    <!-- End of withFirst and unless -->
</div>
<!-- End of container -->
